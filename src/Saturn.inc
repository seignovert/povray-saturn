#local RingsColor = <1.,.88,.78>; // Rings color
#local R_Saturn   =        59494; // Saturn Radius [km]

#macro ring(Rmin,Rmax,Opacity)
   disc { 
      <0,0,0> y,Rmax, Rmin 
      pigment {
      	rgb RingsColor filter Opacity
      }
      finish {
         ambient 0
         diffuse 2
      }
   } 
#end

